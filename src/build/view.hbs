<div class="builds">
    <div class="builds-list">
        {{#each builds}}
            <div class="builds-list--item" id="{{ build }}">
                <i class="fas fa-folder"></i>
                <a href="/builds/{{ build }}">{{ build }}</a>
            </div>
        {{/each}}
    </div>
    <div class="build-info" id="info">
        <div class="build-header">
            <h3>Build: <span>{{ build.build }}</span></h3>
            <h3>Commit: <a href=https://github.com/Amaroq7/SPmod/commit/{{ build.commit }}>{{ build.commit }}</a></h3>
        </div>
        <div class="build-files">
            <h3>Files: </h3>
            {{#each build.files }}
                <div class="build-files--item">
                    <i class="fas fa-file-archive"></i>
                    <a href="/uploads/builds/{{ file}}" download>{{ file }} ({{ size }} MB)</a>
                </div>
            {{/each}}
        </div>
    </div>
</div>